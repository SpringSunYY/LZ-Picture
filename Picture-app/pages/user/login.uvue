<script setup lang="ts">
import {ref} from 'vue';
import {parsePhoneNumberFromString} from 'libphonenumber-js'
import {validatePassword} from "@/utils/validators.ts";

const username = ref('');
const phone = ref('');
const password = ref('');

// 登录逻辑
const handleSignIn = () => {
  //如果账号手机号都为空
  if (!username.value && !phone.value) {
    uni.showToast({
      title: '请输入账号或手机号码，如果输入手机号，系统会默认使用手机号',
      icon: 'none'
    });
    return;
  }
  // 验证国际号码
  const phoneNumber = parsePhoneNumberFromString(phone.value, 'CN')
  if (phone.value && !phoneNumber.isValid()) {
    uni.showToast({
      title: '手机号码格式错误',
      icon: 'none'
    });
    return
  }
  const isPasswordValid = validatePassword(password.value, 8, 20);
  if (isPasswordValid) {
    uni.showToast({
      title: isPasswordValid,
      icon: 'none'
    });
    return
  }

  console.log('Sign in:', username.value);
  uni.showToast({
    title: 'Signing in...',
    icon: 'loading'
  });
};

// 跳转“忘记密码”页
const handleForgotPassword = () => {
  uni.navigateTo({
    url: '/pages/forgot-password/forgot-password'
  });
};

// 跳转“注册”页
const handleCreate = () => {
  uni.navigateTo({
    url: '/pages/register/register'
  });
};
</script>

